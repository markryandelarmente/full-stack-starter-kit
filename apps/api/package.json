{
  "name": "@repo/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc",
    "start": "node --env-file=.env dist/index.js",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:db:push": "cd ../.. && node --env-file=test.env node_modules/.bin/prisma db push --schema=packages/db/prisma/schema.prisma"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/s3-request-presigner": "^3.700.0",
    "@repo/auth": "workspace:*",
    "@repo/db": "workspace:*",
    "@repo/shared": "workspace:*",
    "cors": "^2.8.5",
    "express": "^5.0.1",
    "helmet": "^8.0.0",
    "multer": "^2.0.2",
    "pino": "^10.3.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@repo/config": "workspace:*",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "2.1.9",
    "dotenv": "^16.4.7",
    "eslint": "^9.17.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "pino-pretty": "^13.0.0"
  }
}
